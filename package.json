{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "apple-mail",
  "title": "Apple Mail",
  "description": "Browse recent emails inside",
  "icon": "command-icon.png",
  "author": "aesign",
  "categories": [
    "Communication",
    "Applications",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Inbox",
      "subtitle": "Mail",
      "description": "Browse recent adresses",
      "mode": "view"
    },
    {
      "name": "menu-bar",
      "title": "Unread Counter",
      "subtitle": "Mail",
      "refreshInterval": 1,
      "description": "Peek at unread mails count",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@jxa/global-type": "^1.3.6",
    "@jxa/run": "^1.3.6",
    "@raycast/api": "^1.44.0",
    "@raycast/utils": "^1.4.11",
    "fast-glob": "^3.2.12",
    "javascript-time-ago": "^2.5.9",
    "lodash": "^4.17.21",
    "os-name": "^5.0.1",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.190",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
